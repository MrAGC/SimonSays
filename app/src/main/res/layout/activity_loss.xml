<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <TextView
        android:id="@+id/loss_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Has perdido"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="20dp"
        android:background="#898886"
        android:padding="10dp"
        android:backgroundTint="#95000000"/>

    <Button
        android:id="@+id/ranking_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ranking"
        android:layout_below="@id/loss_message"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:backgroundTint="#95000000"/>

    <Button
        android:id="@+id/retry_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a intentar"
        android:layout_below="@id/ranking_button"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:backgroundTint="#95000000"/>

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Salir"
        android:layout_below="@id/retry_button"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:backgroundTint="#95000000"/>
</RelativeLayout>
